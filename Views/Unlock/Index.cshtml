@{
    ViewData["Title"] = "Unlock User Account";
    Layout = "_Layout";
    var elevateAccounts = ViewBag.ElevateAccounts as List<string> ?? new List<string>();
    var hasMultipleAccounts = elevateAccounts.Count > 1;
}

<div class="max-h-screen-120 overflow-y-auto w-100 no-scrollbar" style="padding-top: 56px;">
    <div class="container-fluid px-3 py-2rem">
        <div class="row justify-content-center">
            <div class="col-12 col-md-11 col-lg-10 col-xl-9">
            <div class="card pulse-glow mx-auto">
                <div class="card-header text-center">
                    <div class="position-relative mb-3">
                        <i class="fas fa-unlock-alt fa-2x icon-warning"></i>
                        <div class="circuit-line position-absolute left-25 right-25 h-1px" style="bottom: -10px;"></div>
                    </div>
                    <h3 class="card-title mb-0">
                        Unlock User Account
                    </h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @ViewBag.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="alert alert-warning alert-warning-styled mb-3 py-2" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-shield-alt me-2 icon-warning"></i>
                            <small><strong>Security Notice:</strong> All unlock requests are logged and audited for compliance purposes.</small>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(ViewBag.ElevateAccount))
                    {
                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle me-2"></i>Request Information</h6>
                            <p class="mb-2">Your access details and request information:</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="permission-item mb-2">
                                        <i class="fas fa-user text-primary me-2"></i>
                                        <strong>Requested by:</strong><br>
                                        <small class="text-muted">@User.Identity?.Name</small>
                                    </div>
                                    <div class="permission-item mb-2">
                                        <i class="fas fa-key text-warning me-2"></i>
                                        <strong>Elevate Account:</strong><br>
                                        <small class="text-muted" id="elevate-account-display">@ViewBag.ElevateAccount</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="permission-item mb-2">
                                        <i class="fas fa-network-wired text-secondary me-2"></i>
                                        <strong>IP Address:</strong><br>
                                        <small class="text-muted">@Context.Connection.RemoteIpAddress</small>
                                    </div>
                                    <div class="permission-item mb-2">
                                        <i class="fas fa-clock text-info me-2"></i>
                                        <strong>Request Time:</strong><br>
                                        <small class="text-muted">@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <form method="post">
                        <input type="hidden" name="username" value="@User.Identity?.Name" />
                        <input type="hidden" name="elevateAccount" id="elevateAccountField" value="@ViewBag.ElevateAccount" />

                        @if (hasMultipleAccounts)
                        {
                            <div class="mb-3">
                                <label for="accountSelector" class="form-label mb-1">
                                    <i class="fas fa-id-badge me-1 icon-warning"></i>
                                    Elevate Account <span class="text-danger">*</span>
                                </label>
                                <select class="form-control" id="accountSelector" style="background: rgba(255,255,255,0.08); border: 1px solid rgba(255,255,255,0.2); color: white;">
                                    @foreach (var account in elevateAccounts)
                                    {
                                        <option value="@account" selected="@(account == (string)ViewBag.ElevateAccount)" style="background: #2A1450;">@account</option>
                                    }
                                </select>
                                <small class="form-text text-primary-light opacity-70">
                                    Select which elevate account to use for this request
                                </small>
                            </div>
                        }

                        @{
                            var availableServers = ViewBag.Servers as List<string> ?? new List<string>();
                            var availableRoles = ViewBag.Roles as List<string> ?? new List<string>();
                        }

                        <div class="row">
                            <!-- Target Servers -->
                            <div class="col-md-6 mb-2">
                                <label class="form-label mb-1">
                                    <i class="fas fa-server me-1 icon-secondary"></i>
                                    Target Servers <span class="text-danger">*</span>
                                    <span class="badge ms-2 bg-secondary-dark" id="server-count">0 selected</span>
                                </label>
                                <div id="server-controls">
                                    @if (availableServers.Any())
                                    {
                                        <div class="mb-2 d-flex gap-2">
                                            <button type="button" class="btn btn-sm btn-outline-primary" id="select-all-servers">
                                                <i class="fas fa-check-double me-1"></i>All
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary" id="clear-all-servers">
                                                <i class="fas fa-times me-1"></i>Clear
                                            </button>
                                        </div>
                                    }
                                </div>
                                <div id="server-list">
                                    @if (availableServers.Any())
                                    {
                                        <div class="server-checkbox-container scrollable-container @(ViewData.ModelState["servers"]?.Errors.Count > 0 ? "border-danger" : "")" style="max-height: 200px; overflow-y: auto;">
                                            @foreach (var server in availableServers)
                                            {
                                                <div class="form-check form-check-styled mb-2">
                                                    <input class="form-check-input server-checkbox" type="checkbox" name="servers" value="@server" id="server-@server.Replace(".", "-").Replace(" ", "-")">
                                                    <label class="form-check-label w-100 cursor-pointer" for="server-@server.Replace(".", "-").Replace(" ", "-")">
                                                        <i class="fas fa-server me-2 icon-secondary"></i>
                                                        <strong>@server</strong>
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-warning py-2">
                                            <i class="fas fa-exclamation-triangle me-2"></i>
                                            No servers available. Contact your administrator.
                                        </div>
                                    }
                                </div>
                                @if (ViewData.ModelState["servers"]?.Errors.Count > 0)
                                {
                                    <div class="invalid-feedback d-block">
                                        @ViewData.ModelState["servers"].Errors[0].ErrorMessage
                                    </div>
                                }
                            </div>

                            <!-- AD Domain Roles -->
                            <div class="col-md-6 mb-2">
                                <label class="form-label mb-1">
                                    <i class="fas fa-users-cog me-1 icon-warning"></i>
                                    AD Domain Roles <span class="text-danger">*</span>
                                    <span class="badge ms-2 bg-secondary-dark" id="role-count">0 selected</span>
                                </label>
                                <div id="role-controls">
                                    @if (availableRoles.Any())
                                    {
                                        <div class="mb-2 d-flex gap-2">
                                            <button type="button" class="btn btn-sm btn-outline-warning" id="select-all-roles">
                                                <i class="fas fa-check-double me-1"></i>All
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary" id="clear-all-roles">
                                                <i class="fas fa-times me-1"></i>Clear
                                            </button>
                                        </div>
                                    }
                                </div>
                                <div id="role-list">
                                    @if (availableRoles.Any())
                                    {
                                        <div class="role-checkbox-container scrollable-container @(ViewData.ModelState["roles"]?.Errors.Count > 0 ? "border-danger" : "")" style="max-height: 200px; overflow-y: auto;">
                                            @foreach (var role in availableRoles)
                                            {
                                                <div class="form-check form-check-styled mb-2">
                                                    <input class="form-check-input role-checkbox" type="checkbox" name="roles" value="@role" id="role-@role.Replace(" ", "-").Replace("&", "and")">
                                                    <label class="form-check-label w-100 cursor-pointer" for="role-@role.Replace(" ", "-").Replace("&", "and")">
                                                        <i class="fas fa-users-cog me-2 icon-warning"></i>
                                                        <strong>@role</strong>
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-warning py-2">
                                            <i class="fas fa-exclamation-triangle me-2"></i>
                                            No roles available. Contact your administrator.
                                        </div>
                                    }
                                </div>
                                @if (ViewData.ModelState["roles"]?.Errors.Count > 0)
                                {
                                    <div class="invalid-feedback d-block">
                                        @ViewData.ModelState["roles"].Errors[0].ErrorMessage
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="mb-2">
                            <label for="reason" class="form-label mb-1">
                                <i class="fas fa-comment me-1"></i>
                                Reason for Unlock <span class="text-danger">*</span>
                            </label>
                            <textarea class="form-control @(ViewData.ModelState["reason"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                      id="reason" name="reason" rows="2"
                                      placeholder="Enter the reason for unlocking this account" required></textarea>
                            @if (ViewData.ModelState["reason"]?.Errors.Count > 0)
                            {
                                <div class="invalid-feedback">
                                    @ViewData.ModelState["reason"].Errors[0].ErrorMessage
                                </div>
                            }
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-home me-2"></i>
                                Back to Dashboard
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg pulse-glow" id="submitBtn">
                                <i class="fas fa-paper-plane me-2"></i>
                                Send request
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Enhanced Checkbox Management with Visual Feedback
        function updateCount(checkboxClass, countId) {
            const checkboxes = document.querySelectorAll(`.${checkboxClass}`);
            const checkedCount = document.querySelectorAll(`.${checkboxClass}:checked`).length;
            const countElement = document.getElementById(countId);

            if (countElement) {
                countElement.textContent = `${checkedCount} selected`;
                if (checkedCount > 0) {
                    countElement.classList.remove('bg-secondary-dark');
                    countElement.classList.add('bg-gradient-primary');
                } else {
                    countElement.classList.remove('bg-gradient-primary');
                    countElement.classList.add('bg-secondary-dark');
                }
            }

            // Add visual feedback to form-check containers
            checkboxes.forEach(checkbox => {
                const container = checkbox.closest('.form-check');
                if (container) {
                    if (checkbox.checked) {
                        container.classList.add('checked');
                    } else {
                        container.classList.remove('checked');
                    }
                }
            });
        }

        function bindSelectAllClear() {
            document.getElementById('select-all-servers')?.addEventListener('click', function() {
                const checkboxes = document.querySelectorAll('.server-checkbox');
                checkboxes.forEach(cb => cb.checked = true);
                updateCount('server-checkbox', 'server-count');
            });

            document.getElementById('clear-all-servers')?.addEventListener('click', function() {
                const checkboxes = document.querySelectorAll('.server-checkbox');
                checkboxes.forEach(cb => cb.checked = false);
                updateCount('server-checkbox', 'server-count');
            });

            document.getElementById('select-all-roles')?.addEventListener('click', function() {
                const checkboxes = document.querySelectorAll('.role-checkbox');
                checkboxes.forEach(cb => cb.checked = true);
                updateCount('role-checkbox', 'role-count');
            });

            document.getElementById('clear-all-roles')?.addEventListener('click', function() {
                const checkboxes = document.querySelectorAll('.role-checkbox');
                checkboxes.forEach(cb => cb.checked = false);
                updateCount('role-checkbox', 'role-count');
            });
        }

        bindSelectAllClear();

        // Update counts when individual checkboxes are clicked
        document.addEventListener('change', function(e) {
            if (e.target.classList.contains('server-checkbox')) {
                updateCount('server-checkbox', 'server-count');
            }
            if (e.target.classList.contains('role-checkbox')) {
                updateCount('role-checkbox', 'role-count');
            }
        });

        // Account selector - dynamically load permissions when account changes
        var accountSelector = document.getElementById('accountSelector');
        if (accountSelector) {
            accountSelector.addEventListener('change', async function() {
                var selectedAccount = this.value;
                document.getElementById('elevateAccountField').value = selectedAccount;
                document.getElementById('elevate-account-display').textContent = selectedAccount;

                // Show loading state
                document.getElementById('server-list').innerHTML = '<div class="text-center py-3"><i class="fas fa-spinner fa-spin me-2"></i>Loading...</div>';
                document.getElementById('role-list').innerHTML = '<div class="text-center py-3"><i class="fas fa-spinner fa-spin me-2"></i>Loading...</div>';

                try {
                    var response = await fetch('@Url.Action("GetAccountPermissions", "Unlock")?elevateAccount=' + encodeURIComponent(selectedAccount));
                    var data = await response.json();

                    if (data.error) {
                        document.getElementById('server-list').innerHTML = '<div class="alert alert-danger py-2"><i class="fas fa-exclamation-triangle me-2"></i>' + data.error + '</div>';
                        document.getElementById('role-list').innerHTML = '';
                        return;
                    }

                    // Rebuild server checkboxes
                    if (data.servers && data.servers.length > 0) {
                        var serverHtml = '<div class="server-checkbox-container scrollable-container" style="max-height: 200px; overflow-y: auto;">';
                        data.servers.forEach(function(server) {
                            var safeId = server.replace(/\./g, '-').replace(/ /g, '-');
                            serverHtml += '<div class="form-check form-check-styled mb-2">' +
                                '<input class="form-check-input server-checkbox" type="checkbox" name="servers" value="' + server + '" id="server-' + safeId + '">' +
                                '<label class="form-check-label w-100 cursor-pointer" for="server-' + safeId + '">' +
                                '<i class="fas fa-server me-2 icon-secondary"></i><strong>' + server + '</strong></label></div>';
                        });
                        serverHtml += '</div>';
                        document.getElementById('server-list').innerHTML = serverHtml;
                        document.getElementById('server-controls').innerHTML = '<div class="mb-2 d-flex gap-2">' +
                            '<button type="button" class="btn btn-sm btn-outline-primary" id="select-all-servers"><i class="fas fa-check-double me-1"></i>All</button>' +
                            '<button type="button" class="btn btn-sm btn-outline-secondary" id="clear-all-servers"><i class="fas fa-times me-1"></i>Clear</button></div>';
                    } else {
                        document.getElementById('server-list').innerHTML = '<div class="alert alert-warning py-2"><i class="fas fa-exclamation-triangle me-2"></i>No servers available. Contact your administrator.</div>';
                        document.getElementById('server-controls').innerHTML = '';
                    }

                    // Rebuild role checkboxes
                    if (data.roles && data.roles.length > 0) {
                        var roleHtml = '<div class="role-checkbox-container scrollable-container" style="max-height: 200px; overflow-y: auto;">';
                        data.roles.forEach(function(role) {
                            var safeId = role.replace(/ /g, '-').replace(/&/g, 'and');
                            roleHtml += '<div class="form-check form-check-styled mb-2">' +
                                '<input class="form-check-input role-checkbox" type="checkbox" name="roles" value="' + role + '" id="role-' + safeId + '">' +
                                '<label class="form-check-label w-100 cursor-pointer" for="role-' + safeId + '">' +
                                '<i class="fas fa-users-cog me-2 icon-warning"></i><strong>' + role + '</strong></label></div>';
                        });
                        roleHtml += '</div>';
                        document.getElementById('role-list').innerHTML = roleHtml;
                        document.getElementById('role-controls').innerHTML = '<div class="mb-2 d-flex gap-2">' +
                            '<button type="button" class="btn btn-sm btn-outline-warning" id="select-all-roles"><i class="fas fa-check-double me-1"></i>All</button>' +
                            '<button type="button" class="btn btn-sm btn-outline-secondary" id="clear-all-roles"><i class="fas fa-times me-1"></i>Clear</button></div>';
                    } else {
                        document.getElementById('role-list').innerHTML = '<div class="alert alert-warning py-2"><i class="fas fa-exclamation-triangle me-2"></i>No roles available. Contact your administrator.</div>';
                        document.getElementById('role-controls').innerHTML = '';
                    }

                    // Rebind select all/clear buttons and update counts
                    bindSelectAllClear();
                    updateCount('server-checkbox', 'server-count');
                    updateCount('role-checkbox', 'role-count');
                } catch (err) {
                    console.error('Error loading account permissions:', err);
                    document.getElementById('server-list').innerHTML = '<div class="alert alert-danger py-2"><i class="fas fa-exclamation-triangle me-2"></i>Failed to load permissions. Please try again.</div>';
                    document.getElementById('role-list').innerHTML = '';
                }
            });
        }

        // Form submission handling
        document.getElementById('submitBtn').addEventListener('click', function(e) {
            const username = document.querySelector('input[name="username"]').value.trim();
            const reason = document.getElementById('reason').value.trim();
            const selectedServers = document.querySelectorAll('.server-checkbox:checked');
            const selectedRoles = document.querySelectorAll('.role-checkbox:checked');

            // Clear any previous inline validation messages
            document.querySelectorAll('.js-validation-error').forEach(el => el.remove());

            // Must select at least one server OR one role (matches server-side validation)
            if (!selectedServers.length && !selectedRoles.length) {
                e.preventDefault();
                var errorDiv = document.createElement('div');
                errorDiv.className = 'alert alert-danger mt-2 js-validation-error';
                errorDiv.innerHTML = '<i class="fas fa-exclamation-triangle me-2"></i>Please select at least one server or role.';
                document.querySelector('.server-checkbox-container, .role-checkbox-container')?.closest('.row')?.insertAdjacentElement('afterend', errorDiv);
                errorDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
                return;
            }

            if (!username || !reason) {
                return; // Let HTML5 validation handle this
            }

            // Confirmation dialog
            const serverList = Array.from(selectedServers).map(cb => cb.value).join(', ');
            const roleList = Array.from(selectedRoles).map(cb => cb.value).join(', ');
            const accountName = document.getElementById('elevateAccountField').value;

            var confirmParts = [`Are you sure you want to unlock "${username}"?\n\nElevate Account: ${accountName}`];
            if (serverList) confirmParts.push(`Servers: ${serverList}`);
            if (roleList) confirmParts.push(`Roles: ${roleList}`);
            const confirmMessage = confirmParts.join('\n');

            if (!confirm(confirmMessage)) {
                e.preventDefault();
            } else {
                // Show loading state - defer the disable so the browser submits the form first
                var btn = this;
                btn.innerHTML = '<i class="fas fa-cog fa-spin me-2"></i>Processing Request...';
                btn.classList.add('btn-loading');
                setTimeout(function() { btn.disabled = true; }, 0);

                // Hide the "Back to Dashboard" button
                var backBtn = document.querySelector('a[href*="Home"]');
                if (backBtn) backBtn.style.display = 'none';
            }
        });

        // Initialize counts on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateCount('server-checkbox', 'server-count');
            updateCount('role-checkbox', 'role-count');
        });
    </script>
}
