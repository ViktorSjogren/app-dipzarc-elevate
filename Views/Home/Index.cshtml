@{
    ViewData["Title"] = "Dizparc Elevate - PAM Solutions";
    Layout = "_Layout";
}

<div class="text-center">
    <div class="hero-section mb-5">
        <h1 class="display-3 mb-4" style="background: var(--gradient-primary); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; font-weight: 700;">
            <i class="fas fa-shield-halved me-3" style="color: var(--color-success);"></i>
            Dizparc Elevate
        </h1>
        <p class="lead mb-4" style="color: var(--color-primary-dark); font-size: 1.4rem; font-weight: 500;">
            Advanced Privileged Access Management Solutions
        </p>
        <div class="circuit-line mb-4" style="width: 200px; margin: 0 auto; height: 2px; background: var(--gradient-success);"></div>
    </div>
    
    <div class="row justify-content-center mt-5">
        <!-- Unlock Account Card -->
        <div class="col-md-6 col-lg-5 col-xl-4 mb-4">
            <div class="card h-100 pulse-glow" style="background: linear-gradient(145deg, rgba(255,255,255,0.9) 0%, rgba(242,238,233,0.8) 100%);">
                <div class="card-header text-center">
                    <div class="position-relative">
                        <i class="fas fa-unlock-alt fa-3x mb-3" style="color: var(--color-warning);"></i>
                        <div class="circuit-line position-absolute" style="bottom: 0; left: 25%; right: 25%; height: 1px;"></div>
                    </div>
                    <h4 class="card-title mb-0">Unlock User Account</h4>
                </div>
                <div class="card-body d-flex flex-column text-center">
                    <p class="card-text flex-grow-1 mb-4" style="color: var(--color-primary-dark); line-height: 1.6;">
                        Quickly unlock user accounts that have been locked due to failed login attempts or security policies. 
                        Supports multi-server and role-based unlocking with full audit trails.
                    </p>
                    <div class="features mb-4">
                        <div class="row text-start">
                            <div class="col-12 mb-2">
                                <i class="fas fa-check-circle me-2" style="color: var(--color-success);"></i>
                                <small>Multi-server support</small>
                            </div>
                            <div class="col-12 mb-2">
                                <i class="fas fa-check-circle me-2" style="color: var(--color-success);"></i>
                                <small>Role-based permissions</small>
                            </div>
                            <div class="col-12 mb-2">
                                <i class="fas fa-check-circle me-2" style="color: var(--color-success);"></i>
                                <small>Complete audit logging</small>
                            </div>
                        </div>
                    </div>
                    <a href="@Url.Action("Index", "Unlock")" class="btn btn-success btn-lg">
                        <i class="fas fa-unlock me-2"></i>
                        Start Unlock Process
                    </a>
                </div>
            </div>
        </div>

        <!-- Administration Card -->
        <div class="col-md-6 col-lg-5 col-xl-4 mb-4">
            <div class="card h-100" style="background: linear-gradient(145deg, rgba(255,255,255,0.6) 0%, rgba(248,245,243,0.6) 100%); border: 2px dashed var(--color-light-neutral);">
                <div class="card-header text-center" style="background: linear-gradient(135deg, var(--color-light-neutral) 0%, var(--color-lighter-neutral) 100%) !important; color: var(--color-secondary-dark) !important;">
                    <i class="fas fa-users-cog fa-3x mb-3" style="color: var(--color-secondary-dark); opacity: 0.5;"></i>
                    <h5 class="card-title mb-0">Administration</h5>
                </div>
                <div class="card-body d-flex flex-column text-center">
                    <p class="card-text flex-grow-1 mb-4" style="color: var(--color-secondary-dark); opacity: 0.8;">
                        Manage system administration tasks including onboarding new servers and users to the PAM environment.
                    </p>
                    <div class="admin-features mb-4">
                        <div class="row text-start">
                            <div class="col-12 mb-2">
                                <i class="fas fa-server me-2" style="color: var(--color-secondary-dark); opacity: 0.6;"></i>
                                <small style="opacity: 0.7;">Server onboarding</small>
                            </div>
                            <div class="col-12 mb-2">
                                <i class="fas fa-user-plus me-2" style="color: var(--color-secondary-dark); opacity: 0.6;"></i>
                                <small style="opacity: 0.7;">User provisioning</small>
                            </div>
                            <div class="col-12 mb-2">
                                <i class="fas fa-shield-alt me-2" style="color: var(--color-secondary-dark); opacity: 0.6;"></i>
                                <small style="opacity: 0.7;">Permission management</small>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-outline-secondary btn-lg" disabled>
                        <i class="fas fa-hourglass-half me-2"></i>
                        Coming Soon
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- System Status Section -->
    <div class="row justify-content-center mt-5">
        <div class="col-lg-10">
            <div class="card" style="background: linear-gradient(135deg, rgba(113, 191, 68, 0.1) 0%, rgba(255, 194, 14, 0.05) 100%);">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="mb-2" style="color: var(--color-primary-dark);">
                                <i class="fas fa-shield-check me-2" style="color: var(--color-success);"></i>
                                System Status
                            </h5>
                            <p class="mb-0" style="color: var(--color-primary-dark); opacity: 0.8;">
                                All PAM services are operational. Authentication system is secure and monitoring is active.
                            </p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <span class="badge bg-success px-3 py-2">
                                <i class="fas fa-check-circle me-1"></i>
                                All Systems Online
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
