@{
    ViewData["Title"] = "Dizparc Elevate - PAM Solutions";
    Layout = "_Layout";
}

<div class="text-center">
    <h1 class="display-4">Dizparc Elevate</h1>
    <p class="lead">Privileged Access Management Solutions</p>
    
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">
                        <i class="fas fa-unlock-alt text-primary me-2"></i>
                        Unlock User Account
                    </h5>
                    <p class="card-text flex-grow-1">
                        Unlock a user account that has been locked due to failed login attempts or security policies.
                    </p>
                    <a href="@Url.Action("Index", "Unlock")" class="btn btn-primary">
                        <i class="fas fa-unlock me-1"></i>
                        Unlock Account
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
