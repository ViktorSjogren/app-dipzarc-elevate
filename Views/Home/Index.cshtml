@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "Dizparc Elevate";
    Layout = "_Layout";
    var isAdmin = (await AuthorizationService.AuthorizeAsync(User, "RequireAdminAccess")).Succeeded;
}

<div class="text-center pt-8rem">

    <div class="d-flex justify-content-center mt-5">
        <div class="row justify-content-center max-w-1200">
            <!-- Unlock Account Card -->
            <div class="col-md-6 col-lg-5 col-xl-4 mb-4 min-w-350 max-w-400">
                <div class="card h-100 pulse-glow card-gradient-light">
                    <div class="card-header text-center">
                        <div class="position-relative">
                            <i class="fas fa-unlock-alt fa-3x mb-3 icon-warning"></i>
                            <div class="circuit-line position-absolute bottom-0 left-25 right-25 h-1px"></div>
                        </div>
                        <h4 class="card-title mb-0">Unlock User Account</h4>
                    </div>
                    <div class="card-body d-flex flex-column text-center">
                        <div class="d-flex align-items-center justify-content-center flex-grow-1 mb-4">
                            <p class="card-text text-center text-primary-dark line-height-1-6 m-0">
                                Unlock your privileged user account.
                            </p>
                        </div>
                        <a href="@Url.Action("Index", "Unlock")" class="btn btn-primary btn-lg">
                            <i class="fas fa-unlock me-2"></i>
                            Start Unlock Process
                        </a>
                    </div>
                </div>
            </div>

            @if (isAdmin)
            {
                <!-- Administration Card -->
                <div class="col-md-6 col-lg-5 col-xl-4 mb-4 min-w-350 max-w-400">
                    <div class="card h-100 pulse-glow card-gradient-light">
                        <div class="card-header text-center">
                            <div class="position-relative">
                                <i class="fas fa-users-cog fa-3x mb-3 icon-primary"></i>
                                <div class="circuit-line position-absolute bottom-0 left-25 right-25 h-1px"></div>
                            </div>
                            <h4 class="card-title mb-0">Administration</h4>
                        </div>
                        <div class="card-body d-flex flex-column text-center">
                            <p class="card-text flex-grow-1 mb-4 text-primary-dark line-height-1-6">
                                System administration tasks including onboarding new servers and users.
                            </p>
                            <a href="@Url.Action("Index", "Administration")" class="btn btn-primary btn-lg">
                                <i class="fas fa-cog me-2"></i>
                                Open Administration
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Contact Support Section -->
    <div class="row justify-content-center mt-5">
        <div class="col-lg-10">
            <div class="card card-gradient-subtle">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h5 class="mb-2 text-white">
                                <i class="fas fa-headset me-2 icon-warning"></i>
                                Need Help?
                            </h5>
                            <p class="mb-0 text-white opacity-90">
                                Contact our support team for assistance.
                            </p>
                        </div>
                        <div class="col-md-4 text-md-end">
                            <div class="contact-info">
                                <div class="mb-2">
                                    <i class="fas fa-phone me-2 icon-warning"></i>
                                    <a href="tel:010-205-12-51" class="text-white text-decoration-none">
                                        010-205 12 51
                                    </a>
                                </div>
                                <div>
                                    <i class="fas fa-envelope me-2 icon-warning"></i>
                                    <a href="mailto:support@dizparc.se" class="text-white text-decoration-none">
                                        support@dizparc.se
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
