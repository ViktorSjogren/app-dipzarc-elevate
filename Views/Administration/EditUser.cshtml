@model dizparc_elevate.Models.securitySolutionsCommon.ElevateUser

@{
    ViewData["Title"] = "Edit User";
    Layout = "_Layout";
    var availableTiers = ViewBag.AvailableTiers as List<dizparc_elevate.Models.securitySolutionsCommon.ElevateAvailableTier> ?? new List<dizparc_elevate.Models.securitySolutionsCommon.ElevateAvailableTier>();
}

<style>
    .tier-select { background-color: #2A1450 !important; border: 1px solid rgba(255,255,255,0.2) !important; color: white !important; }
    .tier-select:focus { background-color: #2A1450 !important; border-color: var(--color-primary) !important; box-shadow: 0 0 0 0.25rem rgba(var(--color-primary-rgb), 0.25) !important; color: white !important; }
    .tier-select option { background-color: #2A1450; color: white; padding: 10px; }
</style>

<div class="page-wrapper-fixed">
    <div class="page-content-section" style="padding-top: 56px; height: calc(100vh - 56px);">
        <div class="container-fluid h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-md-6 col-lg-5">
                    <div class="card" style="background: rgba(42, 20, 80, 0.95); border: 2px solid var(--color-primary-dark); box-shadow: 0 10px 30px rgba(0,0,0,0.5);">
                        <div class="card-header" style="background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-secondary-dark) 100%); border-bottom: 2px solid var(--color-primary-dark);">
                            <h4 class="text-white mb-0">
                                <i class="fas fa-user-edit me-2 text-warning"></i>
                                Edit User
                            </h4>
                        </div>
                        <div class="card-body p-4">
                            <div class="mb-4 p-3" style="background: rgba(255,255,255,0.05); border-radius: 8px; border: 1px solid rgba(255,255,255,0.1);">
                                <div class="row">
                                    <div class="col-6">
                                        <span class="text-primary-light opacity-70 small">User Name</span>
                                        <h6 class="text-white mb-0">@Model.UserName</h6>
                                    </div>
                                    <div class="col-6">
                                        <span class="text-primary-light opacity-70 small">Elevate Account</span>
                                        <h6 class="text-white mb-0"><code>@Model.ElevateAccount</code></h6>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-6">
                                        <span class="text-primary-light opacity-70 small">Status</span>
                                        <div>
                                            @{
                                                var statusClass = Model.Status?.ToLower() switch
                                                {
                                                    "active" => "success",
                                                    "pending" => "warning",
                                                    "error" => "danger",
                                                    _ => "secondary"
                                                };
                                            }
                                            <span class="badge bg-@statusClass">@(Model.Status?.ToUpper() ?? "UNKNOWN")</span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <span class="text-primary-light opacity-70 small">Created</span>
                                        <h6 class="text-white mb-0 small">@(Model.Created?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</h6>
                                    </div>
                                </div>
                            </div>

                            <div id="errorAlert" class="alert alert-danger d-none" style="background: rgba(220, 53, 69, 0.1); border: 1px solid rgba(220, 53, 69, 0.3);">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <span id="errorMessage"></span>
                            </div>
                            <div id="successAlert" class="alert alert-success d-none" style="background: rgba(25, 135, 84, 0.1); border: 1px solid rgba(25, 135, 84, 0.3);">
                                <i class="fas fa-check-circle me-2"></i>
                                <span id="successMessage"></span>
                            </div>

                            <form id="editUserForm">
                                @Html.AntiForgeryToken()
                                <input type="hidden" id="userId" value="@Model.ElevateUsersId" />

                                <div class="mb-3">
                                    <label for="phoneNumber" class="form-label text-primary-light">
                                        <i class="fas fa-phone me-1"></i> Phone Number
                                    </label>
                                    <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" value="@Model.PhoneNumber" placeholder="Enter phone number" style="background: rgba(255,255,255,0.08); border: 1px solid rgba(255,255,255,0.2); color: white;">
                                </div>

                                <div class="mb-4">
                                    <label for="tier" class="form-label text-primary-light">
                                        <i class="fas fa-layer-group me-1"></i> Tier
                                    </label>
                                    <select class="form-select tier-select" id="tier" name="tier">
                                        @foreach (var tier in availableTiers)
                                        {
                                            <option value="@tier.ElevateAvailableTiersId" selected="@(tier.ElevateAvailableTiersId == Model.Tier)">@tier.DisplayName</option>
                                        }
                                    </select>
                                    <small class="form-text text-warning opacity-70">
                                        <i class="fas fa-exclamation-triangle me-1"></i>
                                        Changing the tier will remove all assigned permissions.
                                    </small>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mt-4">
                                    <a href="@Url.Action("UserAdministration", "Administration")" class="btn btn-outline-secondary">
                                        <i class="fas fa-arrow-left me-1"></i>Cancel
                                    </a>
                                    <div>
                                        <button type="button" class="btn btn-danger me-2" id="deleteBtn">
                                            <i class="fas fa-trash me-1"></i>Delete
                                        </button>
                                        <button type="submit" class="btn btn-primary" id="saveBtn">
                                            <i class="fas fa-save me-1"></i>Save Changes
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background: rgba(42, 20, 80, 0.98); border: 2px solid var(--color-danger);">
            <div class="modal-header" style="border-bottom: 1px solid rgba(255,255,255,0.1);">
                <h5 class="modal-title text-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-primary-light">
                <p>Are you sure you want to delete user <strong class="text-white">@Model.UserName</strong>?</p>
                <p class="text-warning mb-0">
                    <i class="fas fa-warning me-1"></i>
                    This action cannot be undone. All permissions and roles will be removed.
                </p>
            </div>
            <div class="modal-footer" style="border-top: 1px solid rgba(255,255,255,0.1);">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="fas fa-trash me-1"></i>Delete User
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('editUserForm');
        const saveBtn = document.getElementById('saveBtn');
        const deleteBtn = document.getElementById('deleteBtn');
        const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
        const errorAlert = document.getElementById('errorAlert');
        const errorMessage = document.getElementById('errorMessage');
        const successAlert = document.getElementById('successAlert');
        const successMessage = document.getElementById('successMessage');
        const userId = document.getElementById('userId').value;
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));

        function hideAlerts() { errorAlert.classList.add('d-none'); successAlert.classList.add('d-none'); }
        function showError(message) { hideAlerts(); errorAlert.classList.remove('d-none'); errorMessage.textContent = message; }
        function showSuccess(message) { hideAlerts(); successAlert.classList.remove('d-none'); successMessage.textContent = message; }

        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            hideAlerts();
            saveBtn.disabled = true;
            saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Saving...';
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const phoneNumber = document.getElementById('phoneNumber').value;
                const tier = document.getElementById('tier').value;
                const response = await fetch('@Url.Action("UpdateUser", "Administration")', {
                    method: 'POST', headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `id=${userId}&phoneNumber=${encodeURIComponent(phoneNumber)}&tier=${encodeURIComponent(tier)}&__RequestVerificationToken=${encodeURIComponent(token)}`
                });
                const result = await response.json();
                if (result.success) { showSuccess(result.message); setTimeout(() => { window.location.href = '@Url.Action("UserAdministration", "Administration")'; }, 1500); }
                else { showError(result.error || 'An error occurred.'); saveBtn.disabled = false; saveBtn.innerHTML = '<i class="fas fa-save me-1"></i>Save Changes'; }
            } catch (error) { showError('A network error occurred. Please try again.'); saveBtn.disabled = false; saveBtn.innerHTML = '<i class="fas fa-save me-1"></i>Save Changes'; }
        });

        deleteBtn.addEventListener('click', function() { deleteModal.show(); });

        confirmDeleteBtn.addEventListener('click', async function() {
            confirmDeleteBtn.disabled = true;
            confirmDeleteBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Deleting...';
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const response = await fetch('@Url.Action("DeleteUser", "Administration")', {
                    method: 'POST', headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: `id=${userId}&__RequestVerificationToken=${encodeURIComponent(token)}`
                });
                const result = await response.json();
                if (result.success) { deleteModal.hide(); showSuccess(result.message + ' Redirecting...'); setTimeout(() => { window.location.href = '@Url.Action("UserAdministration", "Administration")'; }, 1500); }
                else { deleteModal.hide(); showError(result.error || 'An error occurred.'); confirmDeleteBtn.disabled = false; confirmDeleteBtn.innerHTML = '<i class="fas fa-trash me-1"></i>Delete User'; }
            } catch (error) { deleteModal.hide(); showError('A network error occurred. Please try again.'); confirmDeleteBtn.disabled = false; confirmDeleteBtn.innerHTML = '<i class="fas fa-trash me-1"></i>Delete User'; }
        });
    });
</script>
